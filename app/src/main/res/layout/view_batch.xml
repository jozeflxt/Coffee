<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        android:elevation="12dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_width="match_parent"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:id="@+id/btnDetail"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        app:mfb_defaultColor="@color/darkBlue"
        app:mfb_focusColor="@android:color/white"
        app:mfb_radius="25dp"
        app:mfb_text=""
        app:mfb_icon="@string/fawi_info"
        app:mfb_fontIconSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp" />

    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:id="@+id/btnMap"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="10dp"
        app:mfb_defaultColor="@android:color/holo_red_dark"
        app:mfb_focusColor="@android:color/white"
        app:mfb_radius="25dp"
        app:mfb_text=""
        app:mfb_icon="@string/fawi_map"
        app:mfb_fontIconSize="18dp"
        android:layout_toLeftOf="@id/btnDetail"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp" />
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:text="Nombre Lote"
            android:id="@+id/txtName"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Edad:   "
                android:textStyle="italic|bold"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtAge"
                android:text="12"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/moreDetailsView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Número de ramas por árbol:   "
                    android:textStyle="italic|bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtBranches"
                    android:text="12"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Tallos por sitio:   "
                    android:textStyle="italic|bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtStems"
                    android:text="12"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Número de arboles:   "
                    android:textStyle="italic|bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtTrees"
                    android:text="12"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout></RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>